<h1>add a review</h1>

<div class="container">
  <div class="row">
    <div class="col-12">
      <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :rating, collection: Review::RATINGS, prompt: "Select one" %>
      <%= f.input :content %>
      <%= f.submit "create", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
