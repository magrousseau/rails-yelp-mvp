<h1>Add a new restaurant</h1>

<div class="container">
  <div class="row">
    <div class="col-12">
      <%= simple_form_for @restaurant do |f| %>
      <%= f.input :name %>
      <%= f.input :category, collection: Restaurant::CATEGORIES, prompt: "Select one" %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.submit "create", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

