<h1> <%= @restaurant.name %> </h1>

<p> address : <%= @restaurant.address %> </p>
<p> phone number : <%= @restaurant.phone_number %> </p>

<h3>Reviews :</h3>
  <% @restaurant.reviews.each do |review| %>
    <ul class="list-group">
      <li class="list-group-item"><%= "⭐️"*review.rating %></li>
      <li class="list-group-item"><%= review.content %></li>
    </ul>
    <br>
  <% end %>

  <h1>add a review</h1>

<div class="container">
  <div class="row">
    <div class="col-12">
      <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :rating, collection: Review::RATINGS, prompt: "Select one" %>
      <%= f.input :content %>
      <%= f.submit "create", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "back to list", restaurants_path %>

